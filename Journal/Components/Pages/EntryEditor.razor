@page "/entries"
@using JournalApp.Services
@using JournalApp.Models
@inject JournalService JournalService
@inject MoodService MoodService
@inject TagService TagService
@inject NavigationManager Navigation
@using Microsoft.JSInterop
@inject IJSRuntime JS

<div class="all-entries-layout">
    <div class="entries-header-row">
        <h1>All Journal Entries</h1>
        <span class="entries-count">@filteredEntries.Count entries</span>
    </div>
    
    <div class="entries-toolbar">
        <input class="entries-search" 
               placeholder=" Search entries..." 
               value="@searchQuery"
               @oninput="OnSearchInput" />

        <button class="btn btn-sm btn-outline-secondary" @onclick="ClearSearch" title="Clear search">✕</button>
        
        <select class="entries-filter" value="@moodFilter" @onchange="OnMoodFilterChange">
            <option value="">All Moods</option>
            @foreach (var mood in allMoods)
            {
                <option value="@mood.Name">@mood.Name</option>
            }
        </select>
        
        <select class="entries-sort" value="@sortOrder" @onchange="OnSortOrderChange">
            <option value="newest">Sort: Newest First ▼</option>
            <option value="oldest">Sort: Oldest First ▲</option>
            <option value="title">Sort: Title (A-Z)</option>
        </select>
        
        <button class="entries-newentry btn btn-primary" @onclick="GoToWrite">+ New Entry</button>
    </div>

    @if (isLoading)
    {
        <div class="loading-message">Loading entries...</div>
    }
    else if (!filteredEntries.Any())
    {
        <div class="empty-state">
            <p>No entries found.</p>
            <button class="entries-newentry btn btn-primary" @onclick="GoToWrite">Create Your First Entry</button>
        </div>
    }
    else
    {
        <div class="entries-list">
            @foreach (var entry in GetPagedEntries())
            {
                <div class="entry-card" @key="entry.Id">
                    <div class="entry-card-header d-flex justify-content-between align-items-start">
                        <div>
                            <div class="entry-card-title @(GetMoodColor(entry.PrimaryMood))">@entry.Title</div>
                            <div class="entry-card-meta">@entry.Date.ToString("yyyy-MM-dd") - @entry.PrimaryMood</div>
                        </div>

                        <div class="entry-card-actions d-flex gap-2">
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewEntry(entry.Id)">View</button>
                            <button class="btn btn-sm btn-outline-secondary" @onclick="() => EditEntry(entry.Id)">Edit</button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => RequestDeleteEntry(entry)">Delete</button>
                        </div>
                    </div>

                    <div class="entry-card-body mt-2">
                        <div class="entry-card-preview">@GetPreview(entry.Content, 200)</div>
                        <div class="entry-card-tags text-muted mt-2">@string.Join(" • ", (entry.Tags ?? string.Empty).Split(',').Select(t => t.Trim()).Where(t => !string.IsNullOrEmpty(t)))</div>
                        <div class="entry-card-wordcount text-muted">Words: @GetWordCount(entry.Content)</div>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <div class="entries-pagination">
                @if (currentPage > 1)
                {
                    <button class="pagination-btn" @onclick="@(() => ChangePage(currentPage - 1))">« Previous</button>
                }
                
                @for (int i = 1; i <= totalPages; i++)
                {
                    var pageNumber = i;
                    <button class="pagination-btn @(currentPage == pageNumber ? "active" : "")" 
                            @onclick="@(() => ChangePage(pageNumber))">@pageNumber</button>
                }
                
                @if (currentPage < totalPages)
                {
                    <button class="pagination-btn" @onclick="@(() => ChangePage(currentPage + 1))">Next »</button>
                }
            </div>
        }
    }
</div>

<ConfirmDialog @ref="confirmDialog" Title="Delete Entry" Message="Delete this entry? This action cannot be undone." />

@code {
    // Local data
    private List<JournalEntry> allEntries = new();
    private List<JournalEntry> filteredEntries = new();
    private List<Mood> allMoods = new();

    // UI state
    private string searchQuery = "";
    private string moodFilter = "";
    private string sortOrder = "newest";
    private bool isLoading = true;
    private string feedbackMessage = "";
    private string errorMessage = "";

    // Pagination
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages => Math.Max(1, (int)Math.Ceiling(filteredEntries.Count / (double)pageSize));

    // Delete flow
    private ConfirmDialog? confirmDialog;
    private JournalEntry? deleteCandidate;

    /* -------------------------
       Lifecycle & data loading
       ------------------------- */

    protected override async Task OnInitializedAsync()
    {
        // Load initial data (moods + entries)
        await LoadEntries();
    }

    private async Task LoadEntries()
    {
        isLoading = true;
        errorMessage = "";
        try
        {
            // Load available moods (used for filter UI) and all entries
            allMoods = await MoodService.GetAllMoodsAsync() ?? new List<Mood>();
            allEntries = await JournalService.GetEntriesAsync() ?? new List<JournalEntry>();

            // Ensure dates are normalized to local date for correct sorting/filtering
            foreach (var e in allEntries)
            {
                e.Date = e.Date.ToLocalTime();
            }

            // Apply initial filters (sets filteredEntries and pagination)
            ApplyFilters();
        }
        catch (Exception ex)
        {
            // Surface errors for debugging; consider replacing with ILogger in production
            errorMessage = "Failed to load entries.";
            Console.WriteLine($"Error loading entries: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    /* -------------------------
       Input handlers (search/filter/sort)
       ------------------------- */

    // Simple debounce: cancel and schedule ApplyFilters after small delay to avoid applying on every keystroke.
    private CancellationTokenSource? _searchCts;
    private void OnSearchInput(ChangeEventArgs e)
    {
        searchQuery = e.Value?.ToString() ?? "";
        // debounce
        _searchCts?.Cancel();
        _searchCts = new CancellationTokenSource();
        _ = Task.Delay(300, _searchCts.Token)
            .ContinueWith(t => { if (!t.IsCanceled) InvokeAsync(ApplyFilters); }, TaskScheduler.Current);
    }

    private void ClearSearch()
    {
        searchQuery = "";
        ApplyFilters();
    }

    private void OnMoodFilterChange(ChangeEventArgs e)
    {
        moodFilter = e.Value?.ToString() ?? "";
        ApplyFilters();
    }

    private void OnSortOrderChange(ChangeEventArgs e)
    {
        sortOrder = e.Value?.ToString() ?? "newest";
        ApplyFilters();
    }

    /* -------------------------
       Filtering / sorting / paging
       ------------------------- */

    // ApplyFilters rebuilds filteredEntries from allEntries using current search/mood/sort settings.
    private void ApplyFilters()
    {
        // Start from full list
        var list = allEntries.AsEnumerable();

        // Search across title/content/tags/moods (case-insensitive)
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var q = searchQuery.Trim();
            list = list.Where(e =>
                (e.Title ?? string.Empty).Contains(q, StringComparison.OrdinalIgnoreCase) ||
                (StripHtml(e.Content) ?? string.Empty).Contains(q, StringComparison.OrdinalIgnoreCase) ||
                (e.Tags ?? string.Empty).Contains(q, StringComparison.OrdinalIgnoreCase) ||
                (e.PrimaryMood ?? string.Empty).Contains(q, StringComparison.OrdinalIgnoreCase));
        }

        // Mood filter (matches primary or secondary moods)
        if (!string.IsNullOrWhiteSpace(moodFilter))
        {
            list = list.Where(e =>
                (e.PrimaryMood ?? string.Empty).Equals(moodFilter, StringComparison.OrdinalIgnoreCase) ||
                ((e.SecondaryMoods ?? string.Empty).IndexOf(moodFilter, StringComparison.OrdinalIgnoreCase) >= 0));
        }

        // Sorting
        filteredEntries = sortOrder switch
        {
            "oldest" => list.OrderBy(e => e.Date).ThenBy(e => e.CreatedAt).ToList(),
            "title" => list.OrderBy(e => e.Title).ToList(),
            _ => list.OrderByDescending(e => e.Date).ThenByDescending(e => e.CreatedAt).ToList()
        };

        // Reset paging when filters change
        currentPage = 1;
    }

    private List<JournalEntry> GetPagedEntries()
    {
        return filteredEntries
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }

    private void ChangePage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
        }
    }

    /* -------------------------
       Navigation helpers
       ------------------------- */

    // Navigate to the journal page for viewing/editing a specific entry.
    private void ViewEntry(int id)
    {
        Navigation.NavigateTo($"/journal/{id}");
    }

    private void EditEntry(int id)
    {
        Navigation.NavigateTo($"/journal/{id}");
    }

    private void GoToWrite()
    {
        Navigation.NavigateTo("/journal");
    }

    /* -------------------------
       Utilities
       ------------------------- */

    // Simple HTML-stripping helper so search and preview operate on plain text
    private static string StripHtml(string? html)
    {
        if (string.IsNullOrWhiteSpace(html)) return string.Empty;
        return System.Text.RegularExpressions.Regex.Replace(html, "<.*?>", " ");
    }

    private int GetWordCount(string content)
    {
        var text = StripHtml(content);
        if (string.IsNullOrWhiteSpace(text)) return 0;
        return text.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
    }

    private string GetPreview(string content, int maxLength = 150)
    {
        var text = StripHtml(content).Trim();
        if (text.Length <= maxLength) return text;
        return text.Substring(0, maxLength) + "...";
    }

    // Returns a CSS class depending on mood category (used for styling)
    private string GetMoodColor(string mood)
    {
        var moodObj = allMoods.FirstOrDefault(m => m.Name == mood);
        return moodObj?.Category == "Negative" ? "entry-card-title-red" : "";
    }

    /* -------------------------
       Delete flow (uses ConfirmDialog component)
       ------------------------- */

    // Called when user clicks Delete — stores candidate and opens dialog.
    private async Task RequestDeleteEntry(JournalEntry entry)
    {
        deleteCandidate = entry;
        if (confirmDialog == null)
        {
            // fallback to JS confirm if confirmDialog not available
            var ok = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this entry?");
            if (ok) await PerformDelete(entry);
            return;
        }

        try
        {
            // Show the shared ConfirmDialog and await user's choice
            var confirmed = await confirmDialog.ShowAsync();
            if (confirmed && deleteCandidate != null)
            {
                await PerformDelete(deleteCandidate);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Delete flow error: {ex}");
        }
        finally
        {
            deleteCandidate = null;
        }
    }

    // Actual delete operation: calls service, updates local lists and UI.
    private async Task PerformDelete(JournalEntry entry)
    {
        try
        {
            var result = await JournalService.DeleteEntryAsync(entry);
            if (result > 0)
            {
                // Remove from local cache and re-apply filters so UI updates
                allEntries.RemoveAll(e => e.Id == entry.Id);
                ApplyFilters();
                feedbackMessage = "Entry deleted.";
            }
            else
            {
                errorMessage = "Failed to delete entry.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting entry: {ex.Message}";
            Console.WriteLine($"Error deleting entry: {ex}");
        }
    }
}

